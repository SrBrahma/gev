{
  "name": "gev",
  "version": "2.2.5",
  "description": "Generates boilerplates",
  "main": "./lib/index.js",
  "bin": "./lib/index.js",
  "files": [
    "/lib",
    "/semitemplates"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint --fix \"src/**\"",
    "build": "npm run clean && tsc",
    "deploy": "npm run lint && npm run test && npm run build && npm publish",
    "major": "npm version major --no-git-tag-version",
    "minor": "npm version minor --no-git-tag-version",
    "patch": "npm version patch --no-git-tag-version",
    "templates": "ts-node ./scripts/generateTemplates",
    "templatesDeploy": "npm run templates && npm publish",
    "start": "cd tests && ts-node ../src/index.ts",
    "gev": "npm start"
  },
